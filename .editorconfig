# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# CSS-Files
[*.css]
indent_style = space
indent_size = 2

# HTML-Files
[*.html]
indent_style = space
indent_size = 2

# JS-Files
[*.js]
indent_style = space
indent_size = 2

# JSON-Files
[*.json]
indent_style = space
indent_size = 2
